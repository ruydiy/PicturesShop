@using PicturesShop.Models.PainterController
@model DeletePainter
@{
    ViewData["ActiveTab"] = "Painters";
    ViewData["ActivePage"] = "DeletePainter";
}
<div class="mt-3 mb-3 ml-4 mr-3">
    <h4>Delete author</h4>
    <hr>
    <form asp-controller="Painter" asp-action="DeletePainter">
        <div class="row">
            <div class="col">
                <label asp-for="PainterId"></label>
                <input type="number" class="form-control" asp-for="PainterId">
                <span asp-validation-for="PainterId" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                <button type="submit" class="btn btn-primary">Delete painter</button>
            </div>
        </div>
    </form>

</div>