@@{
    ViewData["ActivePage"] = "DeleteGenre";
    ViewData["ActiveTab"] = "Genres";
}
@using PicturesShop.Models.GenreController
@model DeleteGenre
<div class="mt-3 mr-3 ml-3 mb-3">
    <h4>Delete genre</h4>
    <hr>
    <form asp-controller="Genre" asp-action="DeleteGenre">
        <div class="row">
            <div class="col">
                <label asp-for="GenreId"></label>
                <input type="number" asp-for="GenreId" class="form-control">
                <span asp-validation-for="GenreId" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col">
                <button type="submit" class="btn btn-primary">Delete genre</button>
            </div>
        </div>
    </form>
</div>