@{
    ViewData["ActivePage"] = "UpdatePainterPicture";
    ViewData["ActiveTab"] = "Painters";
}
@using PicturesShop.Models.PainterController
@model UpdatePainterPicture
<div class="mt-3 mr-3 ml-3">
    <h4>Add painters and picture</h4>
    <hr>
    <form asp-controller="Painter" asp-action="UpdatePainterPicture">
        <div class="row">
            <div class="col">
                <label asp-for="PictureId"></label>
                <input type="text" asp-for="PictureId" class="form-control">
                <span asp-validation-for="PictureId" class="text-danger"></span>
            </div>
            <div class="col">
                <label asp-for="PainterId"></label>
                <input type="text" asp-for="PainterId" class="form-control">
                <span asp-validation-for="PainterId" class="text-danger"></span>
            </div>
        </div>
        <div class="row mt-3 mb-3">
            <div class="col">
                <label asp-for="Operation"></label>
                <select type="text" asp-for="Operation" class="form-control">
                    <option value="addPainter">Add painter to picture</option>
                    <option value="removeAuthor">Disconnect painter to picture</option>
                </select>
            </div>
            <div class="col">
                <button type="submit" class="btn btn-primary">Update painter and picture</button>
            </div>
        </div>
    </form>

</div>
